@using OnlineLearning.Models.Domains.UserModels
@model User

<h2>User Detail</h2>

@if (Model != null)
{
    <p><strong>ID:</strong> @Model.UserId</p>
    <p><strong>Tên:</strong> @Model.FullName</p>
    <p><strong>Email:</strong> @Model.Email</p>
}
else
{
    <p>Không tìm thấy người dùng.</p>
}

<a class="btn btn-outline-primary" href="@Url.Action("Index", "User")">Quay lại danh sách</a>
