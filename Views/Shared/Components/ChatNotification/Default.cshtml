@model int

<a class="dropdown-item d-flex justify-content-between align-items-center" asp-controller="Chat" asp-action="Index">
    Messages
    @if (Model > 0)
    {
        <span class="badge bg-danger rounded-pill chat-notification-badge">
            @(Model > 99 ? "99+" : Model.ToString())
        </span>
    }
    else
    {
        <span class="badge bg-danger rounded-pill chat-notification-badge" style="display: none;">0</span>
    }
</a>
