@{
    Layout = "_AdminLayout";
}
@model Admin_AddUserDto


@if(TempData["ErrorMessage"] != null) {
    <h2 class="text-danger">@TempData["ErrorMessage"]</h2>
}

<div class="pc-content">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Payment MOMO</h5>
            <div id="avatarPreview" class="mt-2"></div>
        </div>
        <div class="card-body">
            <form asp-area="" asp-controller="Payment" asp-action="CreatePaymentMomo" method="post" >
                <div class="mb-3">
                    <label for="dob" class="form-label">Amount:</label>
                    <input name="amount" type="text" />
                </div>
                <div class="mb-3">
                    <label for="dob" class="form-label">Order Information: </label>
                    <input name="orderInfo" type="text" />
                </div>
                <div class="mb-3">
                    <label for="dob" class="form-label">OrderId:</label>
                    <input name="orderId" type="text" />
                    
                </div>
                
                <!-- Nút submit -->
                <div class="text-center mt-3">
                    <button type="submit" id="submitButton" class="btn btn-primary">Pay with Momo</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- [ Main Content ] end -->