@model OnlineLearning.Models.Domains.CourseModels.CategoryModels.Category

@{
    ViewData["Title"] = "Edit category";
}

<div class="container-fluid container mt-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Edit category</h1>
        <a href="@Url.Action("Categories", "SettingsCourseCategory", new { area = "Admin" })" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
            <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to list
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Category information</h6>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body py-2 px-3">
                            <small class="text-muted">Created at:</small>
                            <p class="mb-1"><i class="far fa-calendar-alt mr-1"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card bg-light">
                        <div class="card-body py-2 px-3">
                            <small class="text-muted">Updated at:</small>
                            <p class="mb-1">
                                <i class="far fa-clock mr-1"></i> 
                                @(Model.UpdatedAt.HasValue ? Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm") : "Not updated")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="EditCategory" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CategoryId" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="DeletedAt" />
                
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label">Category name</label>
                    <input asp-for="CategoryName" class="form-control" placeholder="Enter category name" required />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Status" class="control-label">Status</label>
                    <select asp-for="Status" class="form-control">
                        <option value="@OnlineLearning.Enums.CategoryStatus.Showed">Showed</option>
                        <option value="@OnlineLearning.Enums.CategoryStatus.Hided">Hided</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save changes
                    </button>
                    <a href="@Url.Action("Categories", "SettingsCourseCategory", new { area = "Admin" })" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
