@{
    ViewData["Title"] = "Manage course categories";
}

<div class="container-fluid container mt-4">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage course categories</h1>
    </div>

    <div class="row">
        <!-- Categories -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Categories</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Categories.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-folder fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <p>Manage course categories such as Information Technology, Business, Health,...</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("Categories", "SettingsCourseCategory", new { area = "Admin" })" class="btn btn-primary btn-sm">
                        <i class="fas fa-cog"></i> Manage
                    </a>
                </div>
            </div>
        </div>

        <!-- Languages -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Languages</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Languages.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-language fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <p>Manage course languages such as English, Vietnamese,...</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("Languages", "SettingsCourseCategory", new { area = "Admin" })" class="btn btn-success btn-sm">
                        <i class="fas fa-cog"></i> Manage
                    </a>
                </div>
            </div>
        </div>

        <!-- Levels -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Levels</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.Levels.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-layer-group fa-2x text-gray-300"></i>
                        </div>
                    </div>
                    <p>Manage course levels such as Beginner, Intermediate, Advanced,...</p>
                </div>
                <div class="card-footer bg-transparent border-top-0">
                    <a href="@Url.Action("Levels", "SettingsCourseCategory", new { area = "Admin" })" class="btn btn-warning btn-sm">
                        <i class="fas fa-cog"></i> Manage
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
