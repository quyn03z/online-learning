@model OnlineLearning.Models.Domains.Miscellaneous.FAQ

@{
    ViewData["Title"] = "Detail FAQ";
}

<div class="card shadow mb-4 container mt-4">
    <div class="card-header py-3 bg-info">
        <h6 class="m-0 font-weight-bold text-white">Detail FAQ</h6>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 font-weight-bold">Question</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Question</p>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 font-weight-bold">Answer</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Answer</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 200px;">ID</th>
                            <td>@Model.FaqId</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>
                                @if (Model.CommonStatus == OnlineLearning.Enums.CommonStatus.Showed)
                                {
                                    <span class="badge badge-success">Showed</span>
                                }
                                else if (Model.CommonStatus == OnlineLearning.Enums.CommonStatus.Hided)
                                {
                                    <span class="badge badge-danger">Hided</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Privated</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td><i class="far fa-calendar-alt mr-1"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Updated At</th>
                            <td><i class="far fa-clock mr-1"></i> @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <div class="form-group">
            <div class="d-flex">
                <a asp-action="Edit" asp-route-id="@Model.FaqId" class="btn btn-warning mr-2">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.FaqId" class="btn btn-danger mr-2">
                    <i class="fas fa-trash-alt"></i> Delete
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>