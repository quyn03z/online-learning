@model OnlineLearning.Models.Domains.Miscellaneous.FAQ

@{
    ViewData["Title"] = "Delete FAQ";
}

<div class="card shadow mb-4 container mt-4">
    <div class="card-header py-3 bg-danger">
        <h6 class="m-0 font-weight-bold text-white">Confirm Delete FAQ</h6>
    </div>
    <div class="card-body">
        <div class="alert alert-danger mb-4">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-triangle fa-2x mr-3"></i>
                <div>
                    <h5 class="alert-heading mb-1">Warning!</h5>
                    <p class="mb-0">Are you sure you want to delete this FAQ? This action cannot be undone.</p>
                </div>
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 font-weight-bold">Question</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Question</p>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="mb-0 font-weight-bold">Answer</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0">@Model.Answer</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row mb-4">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th style="width: 200px;">ID</th>
                            <td>@Model.FaqId</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>
                                @if (Model.CommonStatus == OnlineLearning.Enums.CommonStatus.Showed)
                                {
                                    <span class="badge badge-success">Showed</span>
                                }
                                else if (Model.CommonStatus == OnlineLearning.Enums.CommonStatus.Hided)
                                {
                                    <span class="badge badge-danger">Hide</span>
                                }
                                else
                                {
                                    <span class="badge badge-warning">Private</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td><i class="far fa-calendar-alt mr-1"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Updated At</th>
                            <td><i class="far fa-clock mr-1"></i> @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        
        <form asp-action="Delete">
            <input type="hidden" asp-for="FaqId" />
            <div class="form-group">
                <div class="d-flex">
                    <button type="submit" class="btn btn-danger mr-2">
                        <i class="fas fa-trash-alt"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>