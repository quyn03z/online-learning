@model OnlineLearning.Models.Domains.Miscellaneous.FAQ

@{
    ViewData["Title"] = "Edit FAQ";
}

<div class="card shadow mb-4 container mt-4">
    <div class="card-header py-3 bg-warning">
        <h6 class="m-0 font-weight-bold text-dark">Edit FAQ</h6>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card bg-light">
                    <div class="card-body py-2 px-3">
                        <small class="text-muted">Created At:</small>
                        <p class="mb-1"><i class="far fa-calendar-alt mr-1"></i> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-light">
                    <div class="card-body py-2 px-3">
                        <small class="text-muted">Updated At:</small>
                        <p class="mb-1"><i class="far fa-clock mr-1"></i> @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FaqId" />
            <input type="hidden" asp-for="CreatedAt" />
            <input type="hidden" asp-for="UpdatedAt" />
            
            <div class="form-group">
                <label asp-for="Question" class="control-label font-weight-bold">Question</label>
                <input asp-for="Question" class="form-control" placeholder="Enter question" />
                <span asp-validation-for="Question" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Answer" class="control-label font-weight-bold">Answer</label>
                <textarea asp-for="Answer" class="form-control" rows="5" placeholder="Enter answer"></textarea>
                <span asp-validation-for="Answer" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CommonStatus" class="control-label font-weight-bold">Status</label>
                <select asp-for="CommonStatus" class="form-control">
                    <option value="@OnlineLearning.Enums.CommonStatus.Showed">Showed</option>
                    <option value="@OnlineLearning.Enums.CommonStatus.Hided">Hided</option>
                </select>
                <span asp-validation-for="CommonStatus" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-4">
                <div class="d-flex">
                    <button type="submit" class="btn btn-warning mr-2">
                        <i class="fas fa-save"></i> Save changes
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.FaqId" class="btn btn-info mr-2">
                        <i class="fas fa-info-circle"></i> Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}